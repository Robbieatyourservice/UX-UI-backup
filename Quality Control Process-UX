    <script>
        // Enhanced ScrollLock for Authenticity modal with additional fixes
        const AuthScrollLock = {
            scrollY: 0,
            scrollX: 0,
            bodyWidth: 0,
            
            lock: function() {
                // Store current window scroll position and body width
                this.scrollY = window.scrollY || window.pageYOffset;
                this.scrollX = window.scrollX || window.pageXOffset;
                this.bodyWidth = document.body.clientWidth;
                
                // Add modal-open class to html
                document.documentElement.classList.add('auth-modal-open');
                
                // Preserve the background position without shifting content
                document.body.style.position = 'fixed';
                document.body.style.top = `-${this.scrollY}px`;
                document.body.style.left = '0';
                document.body.style.right = '0';
                document.body.style.bottom = '0';
                document.body.style.width = '100%';
                
                // Prevent background scrolling but maintain visual appearance
                document.body.style.overflow = 'hidden';
                
                // Ensure modal stays in position
                const modal = document.getElementById('authenticityModal');
                modal.style.position = 'fixed';
            },
            
            unlock: function() {
                // Remove modal-open class
                document.documentElement.classList.remove('auth-modal-open');
                
                // Remove inline styles
                document.body.style.position = '';
                document.body.style.width = '';
                document.body.style.top = '';
                document.body.style.left = '';
                document.body.style.right = '';
                document.body.style.bottom = '';
                document.body.style.overflow = '';
                
                // Restore exact scroll position
                window.scrollTo(this.scrollX, this.scrollY);
                
                // Reset modal position
                const modal = document.getElementById('authenticityModal');
                modal.style.position = 'fixed';
            }
        };
        
        // Event handler for ESC key
        function authHandleEscKey(e) {
            if (e.key === 'Escape' || e.key === 'Esc') {
                authCloseModal();
            }
        }
        
        // Event handler for overlay click
        function authHandleOverlayClick(e) {
            if (e.target === document.getElementById('authOverlay')) {
                authCloseModal();
            }
        }
        
        function authOpenModal() {
            // Lock scroll first - before showing modal
            AuthScrollLock.lock();
            
            // Then activate modal - immediately without delay
            document.getElementById('authenticityModal').classList.add('active');
            document.getElementById('authOverlay').classList.add('active');
            
            // Add event listeners
            document.addEventListener('keydown', authHandleEscKey);
            document.getElementById('authOverlay').addEventListener('click', authHandleOverlayClick);
        }
        
        function authCloseModal() {
            // Hide modal first
            document.getElementById('authenticityModal').classList.remove('active');
            document.getElementById('authOverlay').classList.remove('active');
            
            // Almost immediate unlocking of scroll
            setTimeout(function() {
                AuthScrollLock.unlock();
            }, 10);
            
            // Remove event listeners
            document.removeEventListener('keydown', authHandleEscKey);
            document.getElementById('authOverlay').removeEventListener('click', authHandleOverlayClick);
        }
    </script>
</body>
